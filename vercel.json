{
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/index.ts": {
      "maxDuration": 300
    },
    "api/rag-sync.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {"source": "/api/rag/sync", "destination": "/api/rag-sync"},
    {"source": "/api/(.*)", "destination": "/api/index"},
    {"source": "/health", "destination": "/api/index"},
    {"source": "/(.*)", "destination": "/index.html"}
  ]
}
